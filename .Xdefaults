! This is a comment

!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintfull

!-------------------------------------------------------------------------------
! URxvt settings
!-------------------------------------------------------------------------------

! Colors for solarized color scheme

#define term_col_black      #073642
#define term_col_red        #DC322F
#define term_col_green      #859900
#define term_col_yellow     #B58900
#define term_col_blue       #268BD2
#define term_color_magneta  #D33682
#define term_color_cyan     #2AA198
#define term_col_white      #EEE8D5
#define term_col_br_black   #002B36
#define term_col_br_red     #CB4B16
#define term_col_br_green   #586E75
#define term_col_br_yellow  #657B83
#define term_col_br_blue    #839496
#define term_col_br_magneta #6C71C4
#define term_col_br_cyan    #93A1A1
#define term_col_br_white   #FDF6E3

URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.transparent:          false
URxvt.fading:               0
! URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
URxvt.loginShell:           true
URxvt.saveLines:            50
URxvt.internalBorder:       3
URxvt.lineSpace:            0

! Fonts
URxvt.allow_bold:           false
! URxvt.font:                 -*-terminus-medium-r-normal-*-12-120-72-72-c-60-iso8859-1
URxvt*font: xft:inconsolata:pixelsize=16
URxvt*boldFont: xft:inconsolata:pixelsize=16

! Fix font space
URxvt*letterSpace: -1

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          term_col_br_yellow
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

*background: term_col_br_black
*foreground: term_col_br_yellow
!!*fading: 40
*fadeColor: term_col_br_black
! ??? Cursor again - probably overwrites previous settings
*cursorColor: term_col_br_cyan
*pointerColorBackground: term_col_br_green
*pointerColorForeground: term_col_br_cyan

! Set colors

*color0:    term_col_black
*color1:    term_col_red
*color2:    term_col_green
*color3:    term_col_yellow
*color4:    term_col_blue
*color5:    term_color_magneta
*color6:    term_color_cyan
*color7:    term_col_white
*color8:    term_col_br_black
*color9:    term_col_br_red
*color10:   term_col_br_green
*color11:   term_col_br_yellow
*color12:   term_col_br_blue
*color13:   term_col_br_magneta
*color14:   term_col_br_cyan
*color15:   term_col_br_white

